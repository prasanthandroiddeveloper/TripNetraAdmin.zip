<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".Analytics.HotelCount">



    <Button
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:text="@string/hotel_reports"
        android:background="@drawable/r_rectangle1"
        android:drawableStart="@drawable/hotel"
        android:layout_marginTop="10sp"
        android:padding="10sp"
        android:textSize="18sp"
        android:textColor="#000"
        android:drawablePadding="10dp"
        android:layout_gravity="center" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@drawable/borders">


    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="35dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="italic"
        android:gravity="start"
        android:padding="5dp"
        android:textColor="#000000"
        android:text="@string/select_date_range"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cinBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/whiteborder2"
            android:hint="@string/start_date"
            android:textColor="#0f2eba"
            android:textStyle="bold"
            android:paddingStart="20dp"
            android:paddingEnd="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="5dp"
            android:drawableStart="@drawable/cal24"
            android:drawableLeft="@drawable/cal24" />

        <Button
            android:id="@+id/coutBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:background="@drawable/whiteborder2"
            android:hint="@string/end_date"
            android:textColor="#0f2eba"
            android:paddingStart="20dp"
            android:paddingEnd="5dp"
            android:layout_marginLeft="15dp"
            android:drawableStart="@drawable/cal24"
            android:drawableLeft="@drawable/cal24"
            android:paddingRight="5dp"
            android:paddingLeft="20dp" />

    </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c7c7c7"
        android:layout_marginTop="10dp"/>

 <!--   <Button
        android:id="@+id/autoCompleteTextView1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:paddingStart="10dp"
        android:textColor="#5c6393"
        android:text="Select Date Type"
        android:background="@drawable/box_grey"
        />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <!--android:background="@drawable/gradient1"-->
        <!--android:background="@drawable/gradient2"-->

    <Button
        android:id="@+id/checkin"
        android:layout_width="0dp"
        android:textSize="15sp"
        android:text="Check In"
        android:textStyle="bold"
        android:background="@drawable/boxfill_radius"
        android:textColor="#000000"
        android:layout_height="50dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/booking"
        android:layout_width="0dp"
        android:textSize="15sp"
        android:text="Booking"
        android:background="@drawable/boxfill_radius"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_weight="1"/>





    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c7c7c7" />
    <LinearLayout
        android:id="@+id/HotelcountLLt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#000"
            android:text="Total Count of Hotels Booked"/>


        <TextView
            android:id="@+id/hotelcountTV"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#fff"
            android:visibility="gone"
            android:textSize="35sp"
            android:layout_marginTop="30dp"
            android:background="@drawable/gradient"
            android:textStyle="bold"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c7c7c7" />
</LinearLayout>