<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f3f4f7"
    android:layout_margin="10dp"
    android:gravity="center"
    tools:context=".Analytics.select_reports">


    <TextView
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/r_rectangle1"
        android:layout_marginBottom="20sp"
        android:text="Business Reports"
        android:textColor="#ef7a0c"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e70707"
        android:layout_margin="15dp"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:background="#f5104d"
        app:cardElevation="5dp">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e4e6e9"
            android:layout_margin="2dp"
            android:orientation="vertical">



    <Button
        android:id="@+id/hotel"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:text="@string/hotel_reports"
        android:layout_margin="8dp"
        android:background="@drawable/r_rectangle1"
        android:drawableStart="@drawable/hotel"
        android:padding="15dp"
        android:textAlignment="textStart"
        android:drawablePadding="20dp"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/darshan"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_margin="8dp"
        android:background="@drawable/r_rectangle1"
        android:text="@string/darshan_reports"
        android:drawableStart="@drawable/prayer"
        android:padding="15dp"
        android:textAlignment="textStart"
        android:drawablePadding="20dp"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/tour"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:background="@drawable/r_rectangle1"
        android:layout_margin="8dp"
        android:text="@string/tour_reports"
        android:drawableStart="@drawable/luggage"
        android:padding="15dp"
        android:textAlignment="textStart"
        android:drawablePadding="20dp"
        android:layout_gravity="center"/>

  <Button
      android:id="@+id/prices"
      android:layout_width="250dp"
      android:layout_height="55dp"
      android:background="@drawable/r_rectangle1"
      android:layout_margin="8dp"
      android:text="@string/price_reports"
      android:visibility="gone"
      android:drawableStart="@drawable/offer"
      android:padding="15dp"
      android:textAlignment="textStart"
      android:drawablePadding="20dp"
      android:layout_gravity="center"/>

    <Button
        android:id="@+id/daily"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:background="@drawable/r_rectangle1"
        android:layout_margin="8dp"
        android:text="@string/daily_bookings"
        android:drawableStart="@drawable/book"
        android:padding="15dp"
        android:textAlignment="textStart"
        android:drawablePadding="20dp"
        android:layout_gravity="center"/>


        <Button
            android:id="@+id/employee"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:background="@drawable/r_rectangle1"
            android:layout_margin="8dp"
            android:text="Employee Daily bookings"
            android:drawableStart="@drawable/book"
            android:padding="15dp"
            android:textAlignment="textStart"
            android:drawablePadding="20dp"
            android:layout_gravity="center"/>



            <Button
                android:id="@+id/employeerange"
                android:layout_width="250dp"
                android:layout_height="65dp"
                android:background="@drawable/r_rectangle1"
                android:layout_margin="8dp"
                android:text="Employee Monthly Bookings"
                android:drawableStart="@drawable/book"
                android:padding="15dp"
                android:textAlignment="textStart"
                android:drawablePadding="20dp"
                android:layout_gravity="center"/>




            <Button
                android:id="@+id/compreport"
                android:layout_width="250dp"
                android:layout_height="65dp"
                android:background="@drawable/r_rectangle1"
                android:layout_margin="8dp"
                android:text="Comparison Reports"
                android:drawableStart="@drawable/diagram"
                android:padding="15dp"
                android:textAlignment="textStart"
                android:drawablePadding="20dp"
                android:layout_gravity="center"/>





            <Button
                android:id="@+id/cancel_reports"
                android:layout_width="250dp"
                android:layout_height="65dp"
                android:visibility="gone"
                android:background="@drawable/r_rectangle1"
                android:layout_margin="8dp"
                android:text="Hotel Profits"
                android:drawableStart="@drawable/diagram"
                android:padding="15dp"
                android:textAlignment="textStart"
                android:drawablePadding="20dp"
                android:layout_gravity="center"/>


</LinearLayout>
</ScrollView>
    </android.support.v7.widget.CardView>
    </LinearLayout>



</LinearLayout>