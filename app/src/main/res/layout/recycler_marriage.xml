<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/AemailTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/calibri"
                        android:textColor="#c45248"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/mobilTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/calibri"
                        android:textSize="18sp"
                        android:textColor="#000000" />



                        <TextView

                            android:id="@+id/flwTV"
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/gradient1"
                            android:fontFamily="@font/calibri"
                            android:textSize="18sp"
                            android:textColor="#FFFFFF" />














                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="#80D1D1D1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/DeptTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:drawableLeft="@drawable/ic_access_time_red_24dp"
                                android:drawablePadding="8dp"
                                android:fontFamily="@font/calibri"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/AstatusTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_event_available_red_24dp"
                                android:drawablePadding="8dp"
                                android:fontFamily="@font/calibri"
                                android:gravity="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/DesignationTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:drawableLeft="@drawable/ic_location_on_red_24dp"
                                android:drawablePadding="8dp"
                                android:fontFamily="@font/calibri"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/AdmnnameTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_person_outline_red_24dp"
                                android:drawablePadding="8dp"
                                android:fontFamily="@font/calibri"
                                android:gravity="center" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:text="Response"
                                android:drawableLeft="@drawable/ic_access_time_red_24dp"
                                android:drawablePadding="8dp"
                                android:fontFamily="@font/calibri"
                                android:gravity="center" />

                        <WebView
                            android:id="@+id/descWebvw"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">
                        </WebView>

                        </LinearLayout>


                    <TextView
                        android:id="@+id/shareTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_share_black_24dp"
                        android:drawableRight="@drawable/ic_share_black_24dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

