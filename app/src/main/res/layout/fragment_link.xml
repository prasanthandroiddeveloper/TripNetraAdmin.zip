<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_frame"
    android:orientation="vertical"
    tools:context=".logs.LinkFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btndrshn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="@string/darshan"/>

        <Button
            android:id="@+id/btntour"
            android:layout_width="0dp"
            android:layout_height="50dp"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="@string/tour"/>



    </LinearLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#f7f7f7"
        card_view:cardElevation="5dp"
        card_view:cardCornerRadius="5dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">






    <AutoCompleteTextView
        android:id="@+id/psearchtv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:background="@drawable/boxfill_radius"
        android:drawableEnd="@drawable/addr"
        android:imeOptions="actionNext"
        android:paddingStart="7dp"
        android:maxLines="1"
        android:inputType="textPersonName"
        android:paddingEnd="0dp"
        android:hint="@string/select_hotel"
        android:textColor="#000000"
        android:drawableRight="@drawable/addr"
        android:paddingLeft="7dp"
        android:paddingRight="0dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#07056e"
        android:text="@string/select_package"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/box_grey">
        <Spinner
            android:id="@+id/packspi"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:prompt="@string/packages"/>
    </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>




    <Button
        android:id="@+id/submitbtn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"

        android:text="Submit"/>

</LinearLayout>