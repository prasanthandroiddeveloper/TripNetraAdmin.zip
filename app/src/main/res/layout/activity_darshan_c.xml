<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Analytics.Darshan_Count">

    <Button
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:text="Darshan Report"
        android:background="@drawable/r_rectangle1"
        android:drawableStart="@drawable/prayer"
        android:layout_marginTop="10sp"
        android:padding="10sp"
        android:textSize="18sp"
        android:textColor="#000"
        android:drawablePadding="10dp"
        android:layout_gravity="center" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@drawable/borders">


    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="35dp"
        android:layout_height="wrap_content"
        android:text="Select date range"
        android:textSize="16sp"
        android:textStyle="italic"
        android:gravity="start"
        android:padding="5dp"
        android:textColor="#000000"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cinBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle"
            android:background="@drawable/whiteborder2"
            android:hint="@string/start_date"
            android:textColor="#000"
            android:paddingStart="20dp"
            android:paddingEnd="5dp"
            android:drawableLeft="@drawable/cal24"
            android:paddingLeft="20dp"
            android:paddingRight="5dp"
            android:drawableStart="@drawable/cal24" />

        <Button
            android:id="@+id/coutBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            style="?android:attr/buttonBarButtonStyle"
            android:background="@drawable/whiteborder2"
            android:drawableLeft="@drawable/cal24"
            android:hint="@string/end_date"
            android:textColor="#000"
            android:paddingStart="20dp"
            android:paddingEnd="5dp"
            android:layout_marginLeft="15dp"
            android:paddingRight="5dp"
            android:paddingLeft="20dp"
            android:drawableStart="@drawable/cal24" />

    </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c7c7c7"
        android:layout_marginTop="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">




        <Button
            android:id="@+id/booking"
            android:layout_width="0dp"
            android:textSize="15sp"
            android:text="Booking"
            android:textStyle="bold"
            android:background="@drawable/boxfill_radius"
            android:textColor="#000"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/travel"
            android:layout_width="0dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/boxfill_radius"
            android:text="Travel Date"
            android:textColor="#000"
            android:layout_height="50dp"
            android:layout_weight="1"/>







    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c7c7c7" />
    <LinearLayout
        android:id="@+id/HotelcountLLt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#000"
            android:text="Total Count of Darshan Booked"/>

        <TextView
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
            android:background="#c7c7c7" />


        <LinearLayout
            android:id="@+id/lineardyna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



        <TextView
            android:id="@+id/hotelcountTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="30sp"
            android:gravity="center"
            android:visibility="gone"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:background="@drawable/gradient2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/AdultsTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="30sp"
            android:gravity="center"
            android:padding="5dp"
            android:visibility="gone"
            android:textColor="#ffffff"
            android:background="@drawable/gradient1"
            android:textStyle="bold"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c7c7c7" />



    </LinearLayout>

</LinearLayout>