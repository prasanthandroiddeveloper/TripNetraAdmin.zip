<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Analytics.HotelCount">


    <TextView
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:background="@drawable/r_rectangle1"
        android:layout_margin="8dp"
        android:text="@string/price_reports"
        android:drawableStart="@drawable/offer"
        android:padding="15dp"
        android:textAlignment="textStart"
        android:gravity="center"
        android:drawablePadding="20dp"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/offer"
        tools:ignore="RtlCompat" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

       <TextView
           android:id="@+id/note"
           android:layout_width="0dp"
           android:layout_height="60dp"
           android:layout_weight="1"
           android:gravity="center"
           android:textSize="22sp"
           android:textColor="#fa0202"
           android:text="Note:"/>


       <TextView
           android:layout_width="0dp"
           android:layout_height="60dp"
           android:layout_weight="3"
           android:textSize="16sp"
           android:layout_marginTop="-4dp"
           android:textColor="#9c9a9c"
           android:text="Earnings Includes GST,SERVICE TAX and SUPPLIER PRICE"/>

   </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="35dp"
        android:layout_height="wrap_content"
        android:text="Select date range"
        android:textSize="16sp"
        android:textStyle="italic"
        android:gravity="start"
        android:padding="5dp"
        android:textColor="#000000"/>


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="center"
    android:layout_marginTop="30dp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/cinBtn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        style="?android:attr/buttonBarButtonStyle"
        android:background="@drawable/whiteborder2"
        android:hint="@string/start_date"
        android:textColor="#000"
        android:paddingStart="20dp"
        android:paddingEnd="5dp"
        android:drawableStart="@drawable/cal24"
        android:paddingLeft="20dp"
        android:paddingRight="5dp"
        android:drawableLeft="@drawable/cal24" />

    <Button
        android:id="@+id/coutBtn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="15dp"
        style="?android:attr/buttonBarButtonStyle"
        android:background="@drawable/whiteborder2"
        android:hint="@string/end_date"
        android:textColor="#000"
        android:paddingStart="20dp"
        android:paddingEnd="5dp"
        android:layout_marginLeft="15dp"
        android:drawableStart="@drawable/cal24"
        android:paddingRight="5dp"
        android:paddingLeft="20dp"
        android:drawableLeft="@drawable/cal24" />

</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c7c7c7"
        android:layout_marginTop="10dp"/>

  <!--  <Button
        android:id="@+id/autoCompleteTextView1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:paddingStart="10dp"
        android:textColor="#5c6393"
        android:text="Select Date Type"
        android:background="@drawable/box_grey"
        android:paddingLeft="10dp" />-->

    <Button
        android:id="@+id/bkng"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:paddingStart="10dp"
        android:background="@drawable/borders"
        android:textColor="#0018bf"
        android:text="Booking wise"
        android:paddingLeft="10dp" />






    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c7c7c7" />
    <LinearLayout
        android:id="@+id/HotelcountLLt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/hotelcountTV"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/gradient"
            android:textColor="#fff"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="10dp"/>



        <TextView
            android:id="@+id/tourscountTV"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/gradient1"
            android:textColor="#fff"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="10dp"/>


        <TextView
            android:id="@+id/darshancountTV"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/gradient2"
            android:textColor="#fff"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="10dp"/>


    </LinearLayout>


</LinearLayout>