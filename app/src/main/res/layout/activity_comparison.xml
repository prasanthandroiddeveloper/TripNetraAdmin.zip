<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Analytics_price.ComparisonActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="16dp"
            android:textColor="#041bb3"
            android:gravity="center"
            android:background="@drawable/borders"
            android:text="Select Year Or Month Wise Bookings"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="Year"
                android:textColor="#9c2e41"
                android:background="@drawable/box_grey"/>
            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="#9c2e41"
                android:text="Year and Month"
                android:background="@drawable/box_grey"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lyt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <Spinner
                android:id="@+id/onlyyear"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/box_grey">
            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lyt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
              <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                  android:layout_marginRight="80dp">

                <Spinner
                    android:id="@+id/yearspin"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="45dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/borders">
                </Spinner>

                <Spinner
                    android:id="@+id/spinnerMonths"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/borders">
                </Spinner>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/yearspin1"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_margin="10dp"
                    android:layout_height="45dp"
                    android:background="@drawable/borders">
                </Spinner>
                <Spinner
                    android:id="@+id/spinnerMonths1"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/borders">
                </Spinner>
                <Button
                    android:id="@+id/plusbtn"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.33"
                    android:layout_margin="10dp"
                    android:background="@drawable/plusd">
                </Button>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/pluslyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_marginRight="80dp"
                android:visibility="invisible">

                <Spinner
                    android:id="@+id/yearspin3"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="45dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/borders">
                </Spinner>


                <Spinner
                    android:id="@+id/spinnerMonths3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/borders">
                </Spinner>

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/yrangeTv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16dp"
            android:text="count"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColor="#484848"
            android:background="#FBD9C6"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/Tlyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/rrangeTv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:text="count"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="#ffffff"
                android:background="#6053A7"/>
            <TextView
                android:id="@+id/rrange2Tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:text="count"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="#ffffff"
                android:background="#8B85C0"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/rrange3Tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:text="count"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="#ffffff"
                android:background="#BFBCDE"/>
        </LinearLayout>

        <Button
            android:id="@+id/getgraphsbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/get_reports"
            android:textSize="16sp"
            android:textColor="#fff"
            android:layout_margin="10dp"
            android:onClick="graph"
            android:background="@drawable/gradient1"/>

    </LinearLayout>
</ScrollView>