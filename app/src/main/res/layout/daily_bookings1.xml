<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:text="@string/daily_booking_reports"
        android:background="@drawable/r_rectangle1"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#006BB6"
        android:textSize="28sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">


        <TextView
            android:id="@+id/hcTv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:background="@drawable/r_rectangle1"
            android:onClick="hotel"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#006BB6"
            android:textSize="28sp"/>

        <android.support.v7.widget.CardView
            android:id="@+id/hotelview"
            android:layout_width="match_parent"
            app:cardBackgroundColor="#eaeaea"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:visibility="gone"
            android:layout_margin="8dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="false"
            card_view:cardCornerRadius="10dp">
            <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"
            android:layout_margin="10dp"/>
        </android.support.v7.widget.CardView>



        <TextView
            android:id="@+id/tcTv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:onClick="tour"
            android:background="@drawable/r_rectangle1"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#006BB6"
            android:textSize="28sp"/>

        <android.support.v7.widget.CardView
            android:id="@+id/tourview"
            android:layout_width="match_parent"
            android:visibility="gone"
            app:cardBackgroundColor="#eaeaea"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:layout_margin="8dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="false"
            card_view:cardCornerRadius="10dp">
          <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview1"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="200dp"
            android:layout_margin="10dp"/>
        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/dcTv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:onClick="Darshan"
            android:background="@drawable/r_rectangle1"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#006BB6"
            android:textSize="28sp"/>

        <android.support.v7.widget.CardView
            android:id="@+id/darshanview"
            android:layout_width="match_parent"
            android:visibility="gone"
            app:cardBackgroundColor="#eaeaea"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:layout_margin="8dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="false"
            card_view:cardCornerRadius="10dp">
           <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview2"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="200dp"
            android:layout_margin="10dp"/>
        </android.support.v7.widget.CardView>

    </LinearLayout>




